<Page x:Class="EpubMaker.Source"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Source">
	<StackPanel>
		<Label TextBlock.Foreground="#003399" TextBlock.FontSize="12pt">
			Choose the files for conversion:
		</Label>
		<DockPanel>
			<Button DockPanel.Dock="Right" Margin="3" Height="23" Width="25" Click="OnChooseSource">...</Button>
			<Label Width="70" VerticalAlignment="Center">Source:</Label>
			<TextBox Height="23" Name="txtSource"></TextBox>
		</DockPanel>
		<DockPanel>
			<Button DockPanel.Dock="Right" Width="25" Margin="3" Height="24" Click="OnChooseDestination">...</Button>
			<Label Width="70" VerticalAlignment="Center">Destination:</Label>
			<TextBox Height="23" Name="txtDestination"></TextBox>
		</DockPanel>
	</StackPanel>
</Page>
